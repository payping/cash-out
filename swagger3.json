            "nullable": true
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "clientRefId": {
            "type": "string",
            "nullable": true
          },
          "error": {
            "type": "string",
            "nullable": true
          },
          "code": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CreateSettlementVM": {
        "type": "object",
        "properties": {
          "amount": {
            "type": "number",
            "format": "double"
          },
          "iban": {
            "type": "string",
            "nullable": true
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "clientRefId": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
