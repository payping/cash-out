          },
          {
            "name": "version",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateSettlementVM"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateSettlementVM"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateSettlementVM"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SettlementDetailsVM"
                }
              }
            }
          }
        }
      }
    },
    "/v{version}/cash-out/requests/settlements": {
